# Server Configuration
NODE_ENV=development
PORT=3010

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# SMTP Email Configuration
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=support@amkrtech.com
