{
  "name": "amkrtech-midtier",
  "version": "1.0.0",
  "description": "AMKRTech Mid-tier API Server - Express API with TypeScript",
  "main": "build/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "type": "module",
  "directories": {
    "lib": "lib",
    "test": "test",
    "build": "build"
  },
  "scripts": {
    "start": "node build/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec tsx server.ts",
    "start:prod": "cross-env NODE_ENV=production node build/server.js",
    "build": "tsc",
    "prebuild": "rimraf build",
    "clean": "rimraf build",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "author": "AMKRTech Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
